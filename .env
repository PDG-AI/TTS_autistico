# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (required)
# Get this from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=tu token del bot

# OpenAI Bot Token [optional for Tgpt command]
OPENAI_API=tu OpenAI api key con GPT-4o-mini

# Bot Settings (optional)
COMMAND_PREFIX=T

# Target Users (optional - override default users)
# Comma-separated list of display names
TARGET_USERS=@clara <3,@pdgadm,@azacgamer

# TTS Settings (optional)
TTS_VOICE=es-ES-ElviraNeural
TTS_RATE=+0%
TTS_VOLUME=+0%

# Audio Settings (optional)
MAX_MESSAGE_LENGTH=500
AUDIO_TIMEOUT=300

# Voice Channel Settings (optional)
AUTO_JOIN=true
AUTO_LEAVE_TIMEOUT=600

# Logging Settings (optional)
LOG_LEVEL=INFO

LOG_FILE=bot.log
